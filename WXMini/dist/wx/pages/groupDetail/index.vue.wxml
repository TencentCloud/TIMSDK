<template name="50c1cf8c">
  <view class="_div data-v-536d31bc bg">
    <i-modal title="添加的用户ID" visible="{{addModalVisible}}" bindok="handleProxy" bindcancel="handleProxy" data-eventid="{{'1'}}" data-comkey="{{$k}}" class="_i-modal data-v-536d31bc">
      <view class="_div data-v-536d31bc input-wrapper"><input type="text" class="_input data-v-536d31bc input" value="{{addUserId}}" bindinput="handleProxy" data-eventid="{{'0'}}" data-comkey="{{$k}}" /></view>
    </i-modal>
    <i-modal title="转让群组" visible="{{changeOwnerModal}}" bindok="handleProxy" bindcancel="handleProxy" data-eventid="{{'3'}}" data-comkey="{{$k}}" class="_i-modal data-v-536d31bc">
      <view class="_div data-v-536d31bc input-wrapper">
        <i-radio-group current="{{current}}" bindchange="handleProxy" data-eventid="{{'2'}}" data-comkey="{{$k}}" class="_i-radio-group data-v-536d31bc">
          <i-radio position="left" wx:key="item.userID" key="{{item.userID}}" value="{{item.userID}}" wx:for="{{groupProfile.memberList}}" wx:for-index="index" wx:for-item="item" class="_i-radio data-v-536d31bc">{{item.userID}}
          </i-radio>
        </i-radio-group>
      </view>
    </i-modal>
    <view class="_div data-v-536d31bc card">
      <i-row class="_i-row data-v-536d31bc">
        <i-col span="8" class="_i-col data-v-536d31bc">
          <view class="_div data-v-536d31bc avatar">
            <image style="width: 80px; height: 80px; border-radius: 8px" src="{{groupProfile.avatar || '/static/images/groups.png'}}" class="_image data-v-536d31bc"></image>
          </view>
        </i-col>
        <i-col span="16" class="_i-col data-v-536d31bc">
          <view class="_div data-v-536d31bc right">
            <view class="_div data-v-536d31bc username">{{groupProfile.name}}</view>
            <view class="_div data-v-536d31bc account">群ID：{{groupProfile.groupID}}</view>
          </view>
        </i-col>
      </i-row>
    </view>
    <view class="_div data-v-536d31bc card" style="margin-top:10px;padding-left:20px;padding-right:20px ">
      <i-row class="_i-row data-v-536d31bc">
        <i-col span="22" class="_i-col data-v-536d31bc">
          <view class="_div data-v-536d31bc member">
            <view class="_div data-v-536d31bc member-list"> 群成员 </view>
            <view bindtap="handleProxy" wx:if="{{currentGroupProfile.type === 'Private'}}" style="padding-left: 10px" data-eventid="{{'4'}}" data-comkey="{{$k}}" class="_div data-v-536d31bc">
              <image style="width:20px;height:20px;border-radius:50%" src="/static/images/more.png" class="_image data-v-536d31bc"></image>
            </view>
          </view>
        </i-col>
        <i-col span="2" class="_i-col data-v-536d31bc">
          <view class="_div data-v-536d31bc member" bindtap="handleProxy" data-eventid="{{'5'}}" data-comkey="{{$k}}">
            <image style="width:20px;height:20px;border-radius:50%" src="/static/images/right.png" class="_image data-v-536d31bc"></image>
          </view>
        </i-col>
      </i-row>
    </view>
    <view class="_div data-v-536d31bc card">
      <view class="_div data-v-536d31bc item">
        <view class="_div data-v-536d31bc key">群介绍</view>
        <view class="_div data-v-536d31bc value">{{groupProfile.introduction || '未设置'}}</view>
      </view>
    </view>
    <view class="_div data-v-536d31bc card">
      <view class="_div data-v-536d31bc item">
        <view class="_div data-v-536d31bc key">群公告</view>
        <view class="_div data-v-536d31bc value">{{groupProfile.notification || '未设置'}}</view>
      </view>
    </view>
    <view class="_div data-v-536d31bc card">
      <view class="_div data-v-536d31bc item">
        <view class="_div data-v-536d31bc key">群类型</view>
        <view class="_div data-v-536d31bc value">{{groupProfile.type}}</view>
      </view>
    </view>
    <view class="_div data-v-536d31bc revise" wx:if="{{isOwner && groupProfile.type !== 'AVChatRoom'}}"><button bindtap="handleProxy" class="_button data-v-536d31bc btn delete" data-eventid="{{'6'}}" data-comkey="{{$k}}">转让群组</button></view>
    <view class="_div data-v-536d31bc revise" wx:if="{{groupProfile.type !== 'Public'}}"><button bindtap="handleProxy" class="_button data-v-536d31bc btn delete" data-eventid="{{'7'}}" data-comkey="{{$k}}">退出群组</button></view>
    <view class="_div data-v-536d31bc revise" wx:if="{{isOwner && groupProfile.type !== 'Private'}}"><button bindtap="handleProxy" class="_button data-v-536d31bc btn delete" data-eventid="{{'8'}}" data-comkey="{{$k}}">解散群组</button></view>
  </view>
</template>

.container {
  background-color: #ededed;
  min-height: 100vh;
}
.container .group {
  height: 100rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-bottom: 2rpx solid #dbdbdb;
  display: flex;
  padding: 20rpx 40rpx;
}
.container .group .avatar {
  width: 120rpx;
}
.container .group .avatar .img {
  width: 60rpx;
  height: 60rpx;
}
.name {
  line-height: 60rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.type {
  line-height: 60rpx;
}
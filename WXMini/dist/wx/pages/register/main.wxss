
.counter-warp {
  height: 100%;
  background: #fff;
  text-align: center;
}
.counter-warp .header {
  padding: 60rpx 80rpx;
  background-color: #006fff;
  color: #fff;
}
.counter-warp .header .header-content {
  display: flex;
  align-items: center;
}
.counter-warp .header .header-content .icon {
  width: 152rpx;
  height: 100rpx;
}
.counter-warp .header .header-content .text {
  text-align: left;
  padding-left: 16rpx;
}
.counter-warp .header .header-content .text .text-header {
  font-size: 56rpx;
}
.counter-warp .header .header-content .text .text-content {
  font-size: 24rpx;
}
.counter-warp .form {
  width: 80vw;
  margin: 160rpx auto 120rpx;
  text-align: left;
  position: relative;
}
.counter-warp .form ._input {
  border-bottom: 2rpx solid #f1f1f1;
  padding: 24rpx;
}
.counter-warp .form .tip {
  padding: 0 24rpx;
  margin-top: 20rpx;
  font-size: 22rpx;
  color: #006fff;
  text-align: left;
}
.login-button {
  width: 80vw;
  background-color: #006fff;
  color: #fff;
  font-size: 32rpx;
}
.login-button::before {
  width: 40rpx;
  height: 40rpx;
  margin: 0 12rpx 4rpx 0;
}
.clicked {
  background-color: #0063e5;
}
.videoview {
  position: relative;
  background-repeat:no-repeat;
  background-size: cover;
  width: 100%;
  height: 100vh;
}

.player-box {
	width: 100%;
  height: 100%;
  display: flex;
}

.set {
  width: 100%;
	height: 100%;
}

.poster {
	position: absolute;
  width: 100%;
	height: 100%;
  top: 0;
  left: 0;
	background-color: #000;
}



.pusher-box {
	position: absolute;
	display: inline-block;
	overflow: hidden;
	text-align: center;
}


live-pusher {
  width: 100%;
	height: 100%;
}


live-player {
  width: 100%;
	height: 100%;
}

.loading {
  position: absolute;
  width: 100%;
  height: 100%;
}

.loadingImg {
  position: absolute;
  width: 100%;
  height: 100%;
}

.loading {
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 15px);
  width: 30px;
  height: 30px;
}


.cell-group {
  margin-top: 20rpx;
}
.logout {
  color: #fb5250;
}
.signature {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 50vw;
  color: #999;
}
.container {
  height: 100vh;
  background-color: #ededed;
}
.container .info-card {
  display: flex;
  padding: 32rpx;
  background-color: #fff;
}
.container .info-card .avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  margin-right: 28rpx;
}
.container .info-card .basic .username {
  font-size: 48rpx;
  line-height: 72rpx;
  font-weight: 600;
}
.container .info-card .basic .user-id {
  font-size: 24rpx;
  color: #999;
}
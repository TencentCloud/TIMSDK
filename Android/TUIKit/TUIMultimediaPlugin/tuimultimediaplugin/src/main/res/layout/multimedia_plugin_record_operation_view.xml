<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/multimedia_plugin_standard_transparent">

    <TextView
            android:id="@+id/record_operation_tips"
            android:textColor="@color/multimedia_plugin_white"
            android:textSize="15sp"
            android:text="@string/multimedia_plugin_record_take_phone_operation_tips"
            android:fontFamily="@string/multimedia_plugin_common_font"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center" />

    <TextView
            android:id="@+id/record_time"
            android:textColor="@color/multimedia_plugin_white"
            android:textSize="18sp"
            android:fontFamily="@string/multimedia_plugin_common_font"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center"
            android:gravity="center" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/cancel_record_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/multimedia_plugin_record_cancel"
                android:contentDescription="@string/multimedia_plugin_empty" />

        <com.tencent.qcloud.tuikit.tuimultimediaplugin.record.view.RecordButtonView
                android:id="@+id/start_record_button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center" />

        <ImageView
                android:id="@+id/record_switch_camera"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/multimedia_plugin_record_switch_camera"
                android:backgroundTint="@drawable/multimedia_plugin_edit_function_button_tint_colors" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="718dp"
    android:padding="20dp"
    android:background="@drawable/tuiroomkit_bg_bottom_dialog_black_portrait">

    <ImageView
        android:id="@+id/tuiroomkit_single_choice_back"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/tuiroomkit_back_face_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tuiroomkit_single_choice_name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="@string/tuiroomkit_title_resolution"
        android:textColor="#D1D9EC"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/tuiroomkit_video_resolution_low"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_marginTop="30dp"
       app:layout_constraintTop_toBottomOf="@+id/tuiroomkit_single_choice_back">

       <View
           android:layout_width="match_parent"
           android:layout_height="1px"
           android:background="@color/tuiroomkit_color_divide_line"
           app:layout_constraintTop_toTopOf="parent"/>

       <TextView
           android:layout_width="120dp"
           android:layout_height="20dp"
           android:text="@string/tuiroomkit_video_resolution_smooth"
           android:textSize="16sp"
           android:textColor="#D1D9EC"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"/>
       
       <ImageView
           android:id="@+id/tuiroomkit_video_resolution_low_checked"
           android:layout_width="16dp"
           android:layout_height="16dp"
           android:visibility="invisible"
           android:background="@drawable/tuiroomkit_bg_choice_selected"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"/>

   </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tuiroomkit_video_resolution_middle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tuiroomkit_video_resolution_low">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tuiroomkit_color_divide_line"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:text="@string/tuiroomkit_video_resolution_sd"
            android:textSize="16sp"
            android:textColor="#D1D9EC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/tuiroomkit_video_resolution_middle_checked"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:visibility="invisible"
            android:background="@drawable/tuiroomkit_bg_choice_selected"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tuiroomkit_video_resolution_high"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tuiroomkit_video_resolution_middle">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tuiroomkit_color_divide_line"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:text="@string/tuiroomkit_video_resolution_hd"
            android:textSize="16sp"
            android:textColor="#D1D9EC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/tuiroomkit_video_resolution_high_checked"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:visibility="invisible"
            android:background="@drawable/tuiroomkit_bg_choice_selected"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tuiroomkit_video_resolution_super"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tuiroomkit_video_resolution_high">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tuiroomkit_color_divide_line"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:text="@string/tuiroomkit_video_resolution_uhd"
            android:textSize="16sp"
            android:textColor="#D1D9EC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/tuiroomkit_video_resolution_super_checked"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:visibility="invisible"
            android:background="@drawable/tuiroomkit_bg_choice_selected"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/tuiroomkit_color_divide_line"
        app:layout_constraintTop_toBottomOf="@+id/tuiroomkit_video_resolution_super"/>

</androidx.constraintlayout.widget.ConstraintLayout>
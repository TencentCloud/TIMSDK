<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:id="@+id/rl_meeting_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tuiroomkit_color_white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_broadcast_time"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/tv_title"
            android:src="@drawable/tuiroomkit_ic_arrow_down" />

        <TextView
            android:id="@+id/tv_broadcast_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_headset"
        android:layout_width="@dimen/tuiroomkit_top_item_view_width"
        android:layout_height="@dimen/tuiroomkit_top_item_view_height"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/img_camera_switch"
        android:layout_toLeftOf="@id/img_camera_switch"
        android:src="@drawable/tuiroomkit_ic_speaker" />

    <ImageView
        android:id="@+id/img_camera_switch"
        android:layout_width="@dimen/tuiroomkit_top_item_view_width"
        android:layout_height="@dimen/tuiroomkit_top_item_view_height"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/img_video_mirror"
        android:layout_toLeftOf="@id/img_video_mirror"
        android:src="@drawable/tuiroomkit_ic_camera_switch" />

    <ImageView
        android:id="@+id/img_video_mirror"
        android:layout_width="@dimen/tuiroomkit_top_item_view_width"
        android:layout_height="@dimen/tuiroomkit_top_item_view_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/tuiroomkit_ic_mirror" />

    <ImageView
        android:id="@+id/btn_report"
        android:layout_width="@dimen/tuiroomkit_top_item_view_width"
        android:layout_height="@dimen/tuiroomkit_top_item_view_width"
        android:layout_centerVertical="true"
        android:layout_marginStart="-135dp"
        android:layout_marginLeft="-135dp"
        android:layout_marginEnd="20dp"
        android:layout_toLeftOf="@id/img_headset"
        android:src="@drawable/tuiroomkit_ic_report_room"
        android:visibility="gone" />
</RelativeLayout>
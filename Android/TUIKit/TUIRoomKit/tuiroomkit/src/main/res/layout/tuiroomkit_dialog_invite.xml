<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tuiroomkit_bg_bottom_dialog_black_portrait"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="61dp">

    <View
        android:id="@+id/tuiroomkit_dialog_invite_hide"
        android:layout_width="24dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/tuiroomkit_bottom_dialog_hide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/ll_add_user"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@+id/tuiroomkit_dialog_invite_hide"
        tools:layout_editor_absoluteX="16dp">

        <ImageView
            android:id="@+id/image_mic"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:src="@drawable/tuiroomkit_ic_add_user" />

        <TextView
            android:id="@+id/tv_close_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/image_mic"
            android:clickable="false"
            android:text="@string/tuiroomkit_add_user"
            android:textColor="@color/tuiroomkit_color_text_light_grey"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/tuiroomkit_bg_dividing_line_grey" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_share_room"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_add_user">

        <ImageView
            android:id="@+id/image_camera"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:src="@drawable/tuiroomkit_ic_share_room" />

        <TextView
            android:id="@+id/tv_open_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/image_camera"
            android:clickable="false"
            android:text="@string/tuiroomkit_share_room"
            android:textColor="@color/tuiroomkit_color_text_light_grey"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/tuiroomkit_bg_dividing_line_grey" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_qr"
        android:layout_width="84dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:src="@drawable/tuiroomkit_ic_share_screen" />

    <Button
        android:id="@+id/tuiroomkit_btn_screen_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="@drawable/tuiroomkit_btn_border"
        android:gravity="center"
        android:paddingLeft="38dp"
        android:paddingTop="14dp"
        android:paddingRight="38dp"
        android:paddingBottom="14dp"
        android:text="@string/tuiroomkit_title_sharing"
        android:textColor="@color/tuiroomkit_color_white"
        android:textSize="18sp" />

</LinearLayout>
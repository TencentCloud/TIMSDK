<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:textColor="@color/customer_service_tips_color"
        android:text="@string/invite_to_evaluation"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/evaluation_bg">
        <TextView
            android:id="@+id/tv_invite_to_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="@color/make_an_evaluation_color"
            tools:text="Please rate this service"/>

        <LinearLayout
            android:id="@+id/ll_star"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="24dp"
                android:layout_height="24dp">
                <ImageView
                    android:id="@+id/iv_star1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/evaluation_star_default"/>
                <View
                    android:id="@+id/v_star1_float_layer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/evaluation_number_background_disable_color"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp">
                <ImageView
                    android:id="@+id/iv_star2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/evaluation_star_default"/>
                <View
                    android:id="@+id/v_star2_float_layer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/evaluation_number_background_disable_color"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp">
                <ImageView
                    android:id="@+id/iv_star3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/evaluation_star_default"/>
                <View
                    android:id="@+id/v_star3_float_layer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/evaluation_number_background_disable_color"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp">
                <ImageView
                    android:id="@+id/iv_star4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/evaluation_star_default"/>
                <View
                    android:id="@+id/v_star4_float_layer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/evaluation_number_background_disable_color"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp">
                <ImageView
                    android:id="@+id/iv_star5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/evaluation_star_default"/>
                <View
                    android:id="@+id/v_star5_float_layer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/evaluation_number_background_disable_color"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_number"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="24dp"
                android:layout_height="24dp">
                <TextView
                    android:id="@+id/tv_number1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/evaluation_number_default_bg_light"
                    android:gravity="center"
                    android:textColor="?attr/evaluation_number_default_color"
                    android:textSize="12sp"
                    android:text="1"/>
                <View
                    android:id="@+id/v_number1_float_layer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/evaluation_number_background_disable_color"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp">
                <TextView
                    android:id="@+id/tv_number2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/evaluation_number_default_bg_light"
                    android:gravity="center"
                    android:textColor="?attr/evaluation_number_default_color"
                    android:textSize="12sp"
                    android:text="2"/>
                <View
                    android:id="@+id/v_number2_float_layer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/evaluation_number_background_disable_color"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp">
                <TextView
                    android:id="@+id/tv_number3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/evaluation_number_default_bg_light"
                    android:gravity="center"
                    android:textColor="?attr/evaluation_number_default_color"
                    android:textSize="12sp"
                    android:text="3"/>
                <View
                    android:id="@+id/v_number3_float_layer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/evaluation_number_background_disable_color"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp">
                <TextView
                    android:id="@+id/tv_number4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/evaluation_number_default_bg_light"
                    android:gravity="center"
                    android:textColor="?attr/evaluation_number_default_color"
                    android:textSize="12sp"
                    android:text="4"/>
                <View
                    android:id="@+id/v_number4_float_layer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/evaluation_number_background_disable_color"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp">
                <TextView
                    android:id="@+id/tv_number5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/evaluation_number_default_bg_light"
                    android:gravity="center"
                    android:textColor="?attr/evaluation_number_default_color"
                    android:textSize="12sp"
                    android:text="5"/>
                <View
                    android:id="@+id/v_number5_float_layer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/evaluation_number_background_disable_color"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_submit_evaluation"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/submit_bg"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="@string/submit_the_evaluation" />
            <View
                android:id="@+id/tv_submit_evaluation_float_layer"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:background="@color/evaluation_number_background_disable_color"
                android:visibility="gone"
                tools:visibility="visible"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_evaluation_tail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:textColor="@color/customer_service_tips_color"
        tools:text="Bye"/>
</LinearLayout>